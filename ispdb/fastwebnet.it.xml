<?xml version="1.0" encoding="UTF-8"?>
<clientConfig version="1.1">
  <emailProvider id="fastwebnet.it">
    <domain>fastwebnet.it</domain>
    <displayName>Fastweb</displayName>
    <displayShortName>Fastweb</displayShortName>
    <incomingServer type="imap">
      <hostname>imap.fastwebnet.it</hostname>
      <port>993</port>
      <socketType>SSL</socketType>
      <username>%EMAILADDRESS%</username>
      <authentication>password-encrypted</authentication>
    </incomingServer>
     <incomingServer type="pop3">
      <hostname>pop.fastwebnet.it</hostname>
      <port>995</port>
      <socketType>SSL</socketType>
      <username>%EMAILADDRESS%</username>
      <authentication>password-encrypted</authentication>
    </incomingServer>
    <outgoingServer type="smtp">
      <hostname>smtp.fastwebnet.it</hostname>
      <port>587</port>
      <socketType>STARTTLS</socketType>
      <username>%EMAILADDRESS%</username>
      <authentication>password-encrypted</authentication>
    </outgoingServer>
    <documentation url="https://www.fastweb.it/fastmail/guida/mail_POPeIMAP/">
    </documentation>
  </emailProvider>
</clientConfig>
