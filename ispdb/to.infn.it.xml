<?xml version="1.0" encoding="UTF-8"?>

<clientConfig version="1.1">
  <emailProvider id="to.infn.it">
    <domain>to.infn.it</domain>
    <displayName>INFN Sezione di Torino</displayName>
    <displayShortName>INFN-TO</displayShortName>
    <incomingServer type="imap">
      <hostname>mail-to.infn.it</hostname>
      <port>993</port>
      <socketType>SSL</socketType>
      <username>%EMAILADDRESS%</username>
      <authentication>password-cleartext</authentication>
    </incomingServer>
    <outgoingServer type="smtp">
      <hostname>mail-to.infn.it</hostname>
      <port>587</port>
      <socketType>STARTTLS</socketType>
      <username>%EMAILADDRESS%</username>
      <authentication>password-cleartext</authentication>
    </outgoingServer>
    <documentation url="https://wiki.to.infn.it/doku.php?id=calcolo:news:impostazioni_imap_smtp">
      <descr lang="it">Istruzioni per l'impostazione manuale</descr>
      <descr lang="en">Generic settings page</descr>
    </documentation>
  </emailProvider>
</clientConfig>
