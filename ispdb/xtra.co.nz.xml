<?xml version="1.0" encoding="UTF-8"?>
<clientConfig version="1.1">
  <emailProvider id="xtra.co.nz">
    <domain>xtra.co.nz</domain>
    <displayName>Xtra Mail</displayName>
    <displayShortName>Xtra Mail</displayShortName>
    <incomingServer type="imap">
      <hostname>imap.xtra.co.nz</hostname>
      <port>993</port>
      <socketType>SSL</socketType>
      <username>%EMAILADDRESS%</username>
      <authentication>password-cleartext</authentication>
    </incomingServer>
    <incomingServer type="pop3">
      <hostname>pop3.xtra.co.nz</hostname>
      <port>995</port>
      <socketType>SSL</socketType>
      <username>%EMAILADDRESS%</username>
      <authentication>password-cleartext</authentication>
    </incomingServer>
    <outgoingServer type="smtp">
      <hostname>send.xtra.co.nz</hostname>
      <port>465</port>
      <socketType>SSL</socketType>
      <username>%EMAILADDRESS%</username>
      <authentication>password-cleartext</authentication>
    </outgoingServer>
    <documentation url="https://www.spark.co.nz/help/get-more/xtra/xtra-mail-setup/">
      <descr lang="en">Configure IMAP and POP3 for Xtra Mail</descr>
    </documentation>
  </emailProvider>
</clientConfig>
